{
  "name": "SetupX Test Suite",
  "version": "1.0.0",
  "description": "Test configuration for SetupX components and scripts",
  "testSuites": {
    "components": {
      "name": "Component Tests",
      "description": "Test individual components",
      "tests": [
        {
          "name": "curl",
          "command": "curl --version",
          "expected": "curl"
        },
        {
          "name": "nodejs",
          "command": "node --version",
          "expected": "v"
        },
        {
          "name": "python",
          "command": "python3 --version",
          "expected": "Python"
        },
        {
          "name": "docker",
          "command": "docker --version",
          "expected": "Docker"
        }
      ]
    },
    "scripts": {
      "name": "Script Tests",
      "description": "Test deployment scripts",
      "tests": [
        {
          "name": "final-ssh-root-login",
          "script": "final-ssh-root-login.sh",
          "args": ["-h"],
          "expected": "Usage:"
        },
        {
          "name": "install-postgres",
          "script": "install-postgres.sh",
          "args": ["-h"],
          "expected": "Usage:"
        },
        {
          "name": "deploy-node-app",
          "script": "deploy-node-app.sh",
          "args": [],
          "expected": "Enter your domain"
        }
      ]
    },
    "modules": {
      "name": "Module Tests",
      "description": "Test module configurations",
      "tests": [
        {
          "name": "common-development",
          "module": "common-development.json",
          "expectedComponents": ["curl", "wget", "vim", "nano"]
        },
        {
          "name": "web-development",
          "module": "web-development.json",
          "expectedComponents": ["nodejs", "npm", "yarn"]
        },
        {
          "name": "scripts",
          "module": "scripts.json",
          "expectedComponents": ["system-update", "backup-system"]
        }
      ]
    }
  },
  "testRunner": {
    "command": "bash",
    "timeout": 30,
    "verbose": true
  }
}
